{% assign designer_name = product.metafields.custom.designer.value.designer_name %}
{% assign designer_description = product.metafields.custom.designer.value.designer_description %}
{% assign designer_photo = product.metafields.custom.designer.value.designer_photo %}

{% if designer_name != blank or designer_description != blank or designer_photo != blank %}

<section class="designer-section page-width"
  style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  
  {%- if section.settings.heading != blank -%}
    <h2 class="text-2xl font-bold mb-6">{{ section.settings.heading }}</h2>
  {%- endif -%}

  <div class="flex flex-col md:flex-row items-start gap-8 {{ section.settings.color_scheme }}">
    
    {%- if designer_photo != blank -%}
      <div class="designer-photo flex-shrink-0 w-full md:w-1/3">
        <img 
          src="{{ designer_photo | image_url: width: 400 }}" 
          alt="{{ designer_name | escape }}" 
          class="rounded-full shadow-md w-full"
        >
      </div>
    {%- endif -%}

    <div class="designer-info w-full md:w-2/3 flex flex-col justify-start">
      {%- if designer_name != blank -%}
        <h3 class="text-xl font-semibold mb-3">
          {{ designer_name }}
        </h3>
      {%- endif -%}

      {%- if designer_description != blank -%}
        <p class="text-base text-gray-700 leading-relaxed">
          {{ designer_description }}
        </p>
      {%- endif -%}
    </div>

  </div>
</section>

{% endif %}

{% schema %}
{
  "name": "Designer Info",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "Designer"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "options": [
        { "value": "background-1", "label": "Background 1" },
        { "value": "background-2", "label": "Background 2" }
      ],
      "default": "background-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Designer Info",
      "category": "Product"
    }
  ]
}
{% endschema %}
