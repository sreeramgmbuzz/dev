{% schema %}
{
  "name": "Product Showcase",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Select product"
    }
  ],
  "presets": [
    {
      "name": "Product Showcase"
    }
  ]
}
{% endschema %}

{% if section.settings.product != blank %}
  {% assign product = all_products[section.settings.product] %}
  {% if product %}
    <div class="product-showcase">
      <h2 class="product-title">{{ product.title }}</h2>
      <div class="product-description">{{ product.description | strip_html | truncate: 180 }}</div>

      <div class="variant-grid">
        {% assign seen_colors = '' %}
        {%- assign color_option_index = nil -%}
        {%- for opt in product.options_with_values -%}
          {%- if opt.name == 'Color' -%}
            {%- assign color_option_index = forloop.index0 -%}
          {%- endif -%}
        {%- endfor -%}

        {% if color_option_index != nil %}
          {% for variant in product.variants %}
            {% assign color_value = variant.options[color_option_index] %}
            {% unless seen_colors contains color_value %}
              {% assign seen_colors = seen_colors | append: color_value | append: ',' %}
              <div class="variant-card">
                <a href="{{ product.url | append: '?variant=' | append: variant.id }}">
                  {% assign img = variant.featured_image | default: product.featured_image | default: product.images.first %}
                  <img src="{{ img | image_url: width: 500 }}" alt="{{ color_value }}" class="variant-image" />
                  <h3 class="variant-title">{{ color_value }}</h3>
                  <p class="variant-price">
                    {{ variant.price | money }}
                    {% if variant.compare_at_price > variant.price %}
                      <span class="compare-price">{{ variant.compare_at_price | money }}</span>
                    {% endif %}
                  </p>
                </a>
              </div>
            {% endunless %}
          {% endfor %}
        {% endif %}
      </div>
    </div>
  {% endif %}
{% endif %}

<style>
.product-showcase {
  text-align: center;
  padding: 3rem 1.5rem;
  background: #fdfdfd;
}

.product-title {
  font-size: 2.2rem;
  margin-bottom: 0.5rem;
}

.product-description {
  color: #5c5c5c;
  max-width: 700px;
  margin: 0 auto 2rem;
  font-size: 1rem;
  line-height: 1.5;
}

.variant-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 1.5rem;
}

.variant-card {
  background: #ffffff;
  border-radius: 12px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.06);
  overflow: hidden;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.variant-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 4px 14px rgba(0,0,0,0.12);
}

.variant-card a {
  color: inherit;
  text-decoration: none;
}

.variant-image {
  width: 100%;
  height: 260px;
  object-fit: cover;
}

.variant-title {
  font-size: 1.1rem;
  font-weight: 600;
  margin: 1rem;
}

.variant-price {
  font-size: 1rem;
  margin: 0 1rem 1rem;
}

.compare-price {
  text-decoration: line-through;
  color: #8a8a8a;
  margin-left: 0.5rem;
  font-size: 0.9rem;
}
</style>
